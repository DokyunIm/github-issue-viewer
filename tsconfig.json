{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl":".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@component/*": ["src/component/*"],
      "@hook/*": ["src/hook/*"],
      "@navigation/*": ["src/navigation/*"],
      "@screen/*": ["src/screen/*"],
      "@service/*": ["src/service/*"],
      "@type/*": ["src/type/*"]
    },
    "types": ["react-native", "styled-components-react-native"]
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js"
  ]
}
